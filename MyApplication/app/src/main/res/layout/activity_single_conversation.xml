<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:orientation="vertical">



    <!--com.example.charlotte.myapplication.CustomFontView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:id="@+id/custom_font_view"
        android:layout_above="@id/editText"/-->


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/send_button"

        android:layout_marginLeft="15dip"

        android:layout_alignParentStart="false"
        android:src="@drawable/ic_send_button"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:layout_marginRight="15dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
      />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/send_button"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_toStartOf="@+id/send_button"
        android:layout_marginLeft="35dip"
        android:layout_marginBottom="-5dp" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"

        android:layout_marginBottom="20dp"
        android:layout_above="@id/editText"
        android:transcriptMode="alwaysScroll" />
</RelativeLayout>